{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "scully-interceptor": [
        "dist/scully-interceptor/scully-interceptor",
        "dist/scully-interceptor"
      ],
      "scully-wordpress-plugin": [
        "dist/scully-wordpress-plugin/scully-wordpress-plugin",
        "dist/scully-wordpress-plugin"
      ]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
